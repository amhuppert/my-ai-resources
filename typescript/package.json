{
  "name": "my-ai-resources-ts",
  "version": "1.0.0",
  "description": "TypeScript types and utilities for Claude Code settings.json configuration",
  "main": "lib/claude-code-settings.js",
  "module": "lib/claude-code-settings.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build scripts/ai.ts --outdir=dist --target=bun && bun build scripts/json-to-zod-to-json-schema.ts --outdir=dist --target=bun",
    "install-user": "bun run scripts/ai.ts install --scope user",
    "install-project": "bun run scripts/ai.ts install --scope project",
    "init-document-map": "bun run scripts/ai.ts init-document-map",
    "type-check": "tsc --noEmit",
    "json-to-schema": "bun run scripts/json-to-zod-to-json-schema.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test lib/ scripts/"
  },
  "bin": {
    "ai": "dist/ai.js",
    "json-to-schema": "dist/json-to-zod-to-json-schema.js"
  },
  "files": [
    "lib/",
    "dist/",
    "scripts/"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "settings",
    "typescript",
    "configuration"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/node": "^24.0.13",
    "commander": "^14.0.1",
    "eta": "^4.0.1",
    "json-to-zod": "^1.1.2",
    "prettier": "^3.6.2",
    "zod": "^3.25.74",
    "zod-to-json-schema": "^3.24.6"
  }
}
